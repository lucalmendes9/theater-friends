@model List<RoomsViewModel>
@{
}
<h1>Listagem de Salas</h1>

<a class="btn btn-success" href="/Rooms/Create">Novo Registro</a>
<br />
<br />

<form action="/Rooms/Index" method="get">
    <label for="value">Pesquisa</label>
    <div class="form-row">
        <input class="form-inline" type="text" name="value" placeholder="digite aqui..." required />&nbsp;
        <select name="option" class="form-inline form-control-sm" required>
            <option value="">Selecione</option>
            <option value="name">Nome</option>
            <option value="seats">Assentos</option>
        </select>&nbsp;
        <input type="submit" class="btn btn-primary btn-sm" value="Buscar" />
    </div>
    <br />
</form>

<table class="table table-bordered table-responsive text-center">
    <tr>
        <td><b>Ações</b></td>
        <td><b>Id</b></td>
        <td><b>Nome</b></td>
        <td><b>Assentos</b></td>
        <td><b>Cinema ID</b></td>
    </tr>

    @foreach (var Salas in Model)
    {
        <tr>
            <td>
                <a href="/Rooms/Edit?id=@Salas.Id" class="glyphicon glyphicon-pencil"></a> &nbsp;&nbsp;
                <a href="javascript:apagar(@Salas.Id, 'Rooms')" class="glyphicon glyphicon-trash"></a>
            </td>
            <td>@Salas.Id</td>
            <td>@Salas.Name</td>
            <td>@Salas.Seats</td>
            <td>@Salas.Theaters_id</td>
        </tr>

    }

</table>
