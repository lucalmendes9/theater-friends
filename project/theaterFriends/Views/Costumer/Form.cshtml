@model CostumerViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <TITLE>Registro de Clientes </TITLE>
    <link href="asserts/stylesheets/stilize/stilize.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/client_func_login.css?v=1.0.2">
</head>
<body>
    <header class="showcase">
        <div class="showcase-top">
            <img src="~/imagens/logo.png" alt="" />
        </div>
        <form action="/Costumer/Salvar" method="post" class="showcase-content">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            @if (ViewBag.Operacao == "A")
            {
                <input class="form-control" name="Id" type="text" id="Id" placeholder="Id">
                <input asp-for="Id" readonly class="form-control disabled" />
            }

            <div class="form-group">
                <input class="form-control" name="Name" type="text" id="Name" placeholder="Nome">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="Email" type="text" id="Email" placeholder="E-mail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="Password" type="password" id="Password" placeholder="Senha">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="Password" type="password" id="Password" placeholder="Confirme a senha">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label for="Creat-at" class="control-label">Data de Criação</label>
                <input asp-for="Created_At" type="date" value="@Model.Created_At.ToString("yyyy-MM-dd")" class="form-control"disabled >
            </div><br>
            <input type="submit" class="btn btn-lg" value="Enviar" />
            <a href="/Login/Index" class="btn btn-lg">Voltar</a>
        </form>
    </header>
    <script type="text/javascript" src="~/js/cadastroFunc.js"></script>
</body>
</html>