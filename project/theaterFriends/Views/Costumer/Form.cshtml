@model CostumerViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <TITLE>Registro de Clientes </TITLE>
    <link href="asserts/stylesheets/stilize/stilize.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/client_func_login.css">
</head>
<body>
    <header class="showcase">
        <div class="showcase-top">
            <img src="~/imagens/logo.png" alt="" />
        </div>
        <form action="/Costumer/Salvar" method="post" class="showcase-content ">
            <input type="hidden" name="Operacao" value="I" />

            <div class="form-group">
                <input class="form-control" name="Name" type="text" id="Name" placeholder="Nome" >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="Email" type="text" id="Email" placeholder="E-mail" >
                <span asp-validation-for="Email" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="Password" type="password" id="Password" placeholder="Senha" >
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input class="form-control" name="ConfirmPassword" type="password" id="ConfirmPassword" placeholder="Confirme a senha" >
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div><br>
            <input type="submit" class="btn btn-lg" value="Enviar" />
            <a href="/Login/Index" class="btn btn-lg">Voltar</a>
            @if (ViewBag.Erro != null)
            {
                <p style="background-color: red;text-align: center;color: #FFF;border-radius: 20px;">@ViewBag.Erro</p>
            }
        </form>
    </header>
    <script type="text/javascript" src="~/js/cadastroFunc.js"></script>
</body>
</html>