@model EmployerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <TITLE>Registro de Funcionário</TITLE>
    <link href="asserts/stylesheets/stilize/stilize.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/client_func_login.css?v=1.0.2">
</head>
<body>
    <header class="showcase">
        <div class="showcase-top">
            <img src="~/imagens/logo.png" alt="" />
        </div>
        
        <form action="/Employer/Salvar" method="post" class="showcase-content">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            @if (ViewBag.Operacao == "A")
            {
                <label for="Id">Código do Funcionário</label>
                <input asp-for="Id" readonly class="form-control disabled" />
            }
            <br />
            <div class="form-group">
                <label for="Name">Nome do Funcionário</label>
                <input class="form-control" asp-for="Name" placeholder="ex... Ribamar">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br>

            <div class="form-group">
                <label for="Hired_at" class="control-label">Data de Admissão</label>
                <input asp-for="Hired_At" type="date" class="form-control">
                <span asp-validation-for="Hired_At" class="text-danger"></span>
            </div><br>

            <div class="form-group">
                <label for="Name">Email</label>
                <input class="form-control" asp-for="Email" placeholder="zerohora@pg.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div><br>

            <div class="form-group">
                <label for="Name">Senha</label>
                <input class="form-control" asp-for="Password" placeholder="">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br>

            @*<div class="form-group">
                <label for="Name">Confirme sua senha</label>
                <input class="form-control" asp-for="Password" placeholder="">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br>*@

            <div class="form-group">
                <label for="Employer_role">Cargo/Função</label>
                <input class="form-control"asp-for="Employer_role" placeholder="Pipoqueiro">
                <span asp-validation-for="Employer_role" class="text-danger"></span>
            </div><br>

            <br />
            <a href="#" type="submit" class="btn btn-lg">Enviar</a>
            <a href="/Employer/Index" class="btn btn-lg">Voltar</a>
        </form>

    </header>
    <script type="text/javascript" src="~/js/cadastroFunc.js"></script>
</body>
</html>
