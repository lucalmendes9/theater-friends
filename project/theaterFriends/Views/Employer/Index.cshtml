@model List<EmployerViewModel>
@{
}
<h1>Listagem de Funcionarios</h1>

<a href="/Employer/create">Novo Registro</a>
<br />

<table class="table table-bordered table-responsive">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Email</td>
        <td>Cargo</td>
        <td>Data de Contratação</td>
    </tr>

    @foreach (var Empregado in Model)
    {
        <tr>
            <td>
                <a href="/Employer/Edit?id=@Empregado.Id">Editar</a> &nbsp;&nbsp;
                <a href="javascript:apagar(@Empregado.Id, 'Employer')">Apagar</a>
            </td>
            <td>@Empregado.Id</td>
            <td>@Empregado.Name</td>
            <td>@Empregado.Email</td>
            <td>@Empregado.Employer_role</td>
            <td>@Empregado.Hired_At.ToShortDateString()</td>
        </tr>

    }

</table>
