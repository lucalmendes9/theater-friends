@model List<MoviesViewModel>;
@{
}

<!DOCTYPE html>
<html>

<head>
    <title>Theater Friends</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport" />
    <link href="~/css/movie.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>


<body style="background-color: black;">

    <header @*class="showcase"*@ style="margin: 0 0 150px 0;">
        <div class="showcase-top">
            <img src="~/imagens/logo.png" alt="" />
            <a href="/Login/Index" class="btn btn-rounded">Sign In</a>
        </div>
    </header>

    <div class="center">
        <section class="mega-destaque">
            <div class="container ">
                <div class="row"> </div>
            </div>
        </section>



        <section class="filme-conteudo animated fadeIn delayp1">
            <div class="container" style="background-color: rgb(37, 36, 36);">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="page-title" style="color: blanchedalmond; text-align: center; font-family: sans-serif; background-color: rgb(37, 36, 36);">
                            <br>
                            <h2><b>@ViewBag.Name</b></h2>
                            <br>
                        </div>
                    </div>
                    <div class="col-md-3 text-center" style="background-color: rgb(37, 36, 36)" ;>
                        <img class="media-object" max-height="50%" max-width="100%" src="data:image/jpeg;base64,@ViewBag.ImagemEmBase64">
                        <p><br></p>
                    </div>
                    <div class="col-md-6 " style="color: blanchedalmond;   background-color: rgb(37, 36, 36) ">
                        <p>
                            @ViewBag.Description
                        </p>
                        <p><b>Duração: </b><span class="color-destaque "><i class="fa fa-clock-o "></i>@ViewBag.Length</span></p>
                        <p><b>Gênero: </b><span class="color-destaque ">@ViewBag.Type</span></p>
                        <p><b>Idade mínima permitida: </b><span class="color-destaque ">@ViewBag.Min_age</span></p>
                        <p><b>Idioma: </b><span class="color-destaque ">@ViewBag.Language</span></p>
                    </div>

                </div>
            </div>
        </section>

    </div>



    <div class="container" style="background-color: rgb(37, 36, 36);">
        <br>
        <br>
        <button style="margin: 0 0 20px 0;" type="button" class="btn btn-rounded" data-toggle="collapse" data-target="#demo">Sessões</button>
        <div id="demo" class="collapse" style="color: red">

            <table style="table-layout:auto" class="table table-responsive">
                <tr>
                    <td>Cidade</td>
                    <td>Cinema</td>
                    <td>Horário de Início</td>
                </tr>

                @if (Model != null)
                {

                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.City</td>
                            <td>@m.Description_Theater</td>
                            <td>@m.Start_Date</td>
                        </tr>
                    }
                }

            </table>

            <br>
            <br>
            <br>

        </div>

    </div>




    <footer class="footer">
        <br>
        <br>
        <br>
        <br>
        <div class="footer-cols">


            <ul>
                <li>Perguntas? Ligue o Viotti</li>
                <li><a href="/Home/About">Sobre</a></li>
                <li><a href="/Employer/Form">Administrativo</a></li>
            </ul>
            <ul>
                <li>Entre em contato: </li>
                <li>+55 11 4002-8922</li>&nbsp;
                <li>theaterfriends@theaterfriends.com</li>&nbsp;
                <li>Rua dos Bobos, Nº0, 09000-584 SP - Brasil</li>
            </ul>
            <ul>
                <li><a href="#">Central de Ajuda</a></li>
                <li><a href="#">Minha conta</a></li>
            </ul>
            <ul>
                <li><a href="#">Redes Sociais:</a></li>
                <li>Instagram: theatherfriends</li>
                <li>Facebook: theatherfriends</li>
            </ul>

        </div>



    </footer>
    <script src="~/js/home.js"></script>

</body>

</html>
